{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["es6", "esnext.asynciterable"],
    "moduleResolution": "node",
    "module": "esnext",
    "strict": true,
    "allowJs": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": ["webpack.config.js"]
}
